<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.10" method="upgrade" group="hikashop">
    <name>PLG_HIKASHOP_FAKTUROWNIA</name>
    <creationDate>2025-09-21</creationDate>
    <version>1.0.0</version>
    <author>Paweł Półtoraczyk</author>
    <authorEmail>kontakt@web-service.com.pl</authorEmail>
    <authorUrl>https://web-service.com.pl</authorUrl>
    <copyright>(C) 2025 web-service. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>PLG_HIKASHOP_FAKTUROWNIA_DESC</description>

    <files>
        <filename plugin="fakturownia">fakturownia.php</filename>
        <languages>
            <language tag="pl-PL">language/pl-PL/plg_hikashop_fakturownia.sys.ini</language>
        </languages>
    </files>

    <config>
        <fields name="params" addfieldpath="/components/com_hikashop/fields">
            <fieldset name="basic" label="PLG_HIKASHOP_FAKTUROWNIA_FIELDSET_BASIC">
                <field
                    id="api_token"
                    name="api_token"
                    type="text"
                    label="PLG_HIKASHOP_FAKTUROWNIA_API_TOKEN_LABEL"
                    description="PLG_HIKASHOP_FAKTUROWNIA_API_TOKEN_DESC"
                    size="40"
                />
                <field
                    id="subdomain"
                    name="subdomain"
                    type="text"
                    label="PLG_HIKASHOP_FAKTUROWNIA_SUBDOMAIN_LABEL"
                    description="PLG_HIKASHOP_FAKTUROWNIA_SUBDOMAIN_DESC"
                    size="40"
                />
                <field
                    name="seller_name"
                    type="text"
                    default=""
                    label="PLG_HIKASHOP_FAKTUROWNIA_SELLER_NAME_LABEL"
                    description="PLG_HIKASHOP_FAKTUROWNIA_SELLER_NAME_DESC"
                    filter="raw"
                />
                <field
                    name="seller_tax_no"
                    type="text"
                    default=""
                    label="PLG_HIKASHOP_FAKTUROWNIA_SELLER_TAX_NO_LABEL"
                    description="PLG_HIKASHOP_FAKTUROWNIA_SELLER_TAX_NO_DESC"
                />
                <field
                    name="invoice_mode"
                    type="list"
                    default="vat"
                    label="PLG_HIKASHOP_FAKTUROWNIA_INVOICE_MODE_LABEL"
                    description="PLG_HIKASHOP_FAKTUROWNIA_INVOICE_MODE_DESC">
                    <option value="vat">PLG_HIKASHOP_FAKTUROWNIA_OPTION_VAT</option>
                    <option value="receipt">PLG_HIKASHOP_FAKTUROWNIA_OPTION_RECEIPT</option>
                    <option value="auto">PLG_HIKASHOP_FAKTUROWNIA_OPTION_AUTO</option>
                </field>
                <field
                    name="custom_note"
                    type="note"
                    label="PLG_HIKASHOP_FAKTUROWNIA_CUSTOM_NOTE_LABEL"
                    description="PLG_HIKASHOP_FAKTUROWNIA_CUSTOM_NOTE_DESC"
                />
            </fieldset>

            <fieldset name="debug" label="PLG_HIKASHOP_FAKTUROWNIA_FIELDSET_DEBUG">
                <field
                    name="debug_order"
                    type="radio"
                    default="0"
                    label="PLG_HIKASHOP_FAKTUROWNIA_DEBUG_ORDER_LABEL"
                    description="PLG_HIKASHOP_FAKTUROWNIA_DEBUG_ORDER_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field
                    name="debug"
                    type="radio"
                    default="0"
                    label="PLG_HIKASHOP_FAKTUROWNIA_DEBUG_LABEL"
                    description="PLG_HIKASHOP_FAKTUROWNIA_DEBUG_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>

